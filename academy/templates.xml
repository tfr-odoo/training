<openerp>
    <data>
	 <template id="index">
	 	<t t-call="website.layout">
		 	<t t-set="title">Academy</t>
		 	<div class="oe_structure">
		 		<div class="container">
				 	<ul t-foreach="teachers" t-as="teacher">
				 		<a t-attf-href="/academy/{{ slug(teacher) }}"><li t-esc="teacher.name"/></a>
				 		<ul t-foreach="teacher.learn_ids" t-as="skill">
				 			<t t-if="skill_odd">
				 				<li t-esc="skill.name" class="en_rouge"/>
				 			</t>
				 			<t t-if="skill_even">
				 				<li t-esc="skill.name" class="en_bleu"/>
				 			</t>
				 		</ul>
				 	</ul>
			 	</div>
		 	</div>
	 	</t>
	 </template>  
	  
	 <template id="prof">
	 	<t t-call="website.layout">
		 	<t t-set="title">Academy</t>
		 	<div class="oe_structure">
		 		<div class="container">
		 			<h1><t t-esc="teacher.name"/></h1>
		 				
		 		</div>
		 	</div>
		 </t>
	 </template>
	 
